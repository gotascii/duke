#!/usr/bin/env ruby

require 'duke'

ARGV << '--help' if ARGV.empty?

command = ARGV.shift

case command
when '-h', '--help'
  puts <<-EOT
Usage: duke COMMAND [ARGS]

Commands:
start REPO_NAME PORT  start cijoe for REPO_NAME on PORT
stop REPO_NAME PORT   stop cijoe for REPO_NAME on PORT
  EOT
else
  Duke::Cli.new.send(command.to_sym, *ARGV)
end